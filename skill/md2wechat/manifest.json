{
  "name": "md2wechat",
  "version": "1.3.0",
  "description": "Convert Markdown articles to WeChat Official Account formatted HTML",
  "repository": "geekjourneyx/md2wechat-skill",
  "requires": {
    "tools": [
      {
        "name": "curl",
        "optional": true,
        "purpose": "Download binary on first run",
        "alternatives": ["wget"]
      }
    ],
    "apis": [
      {
        "name": "WeChat Official Account API",
        "optional": true,
        "purpose": "Upload articles to draft box",
        "setup_url": "https://developers.weixin.qq.com/platform"
      }
    ]
  },
  "binary": {
    "name": "md2wechat",
    "source": "github-releases",
    "base_url": "https://github.com/geekjourneyx/md2wechat-skill/releases"
  },
  "platforms": {
    "darwin_amd64": "md2wechat_darwin_amd64",
    "darwin_arm64": "md2wechat_darwin_arm64",
    "linux_amd64": "md2wechat_linux_amd64",
    "linux_arm64": "md2wechat_linux_arm64",
    "windows_amd64": "md2wechat_windows_amd64.exe"
  }
}
